---
import Plus from "@/assets/Plus.astro";

const { open, title } = Astro.props;
---

<details
  class="border-fivegreen-300 w-full border-b"
  name="services"
  open={open}
>
  <summary class="flex w-full items-center justify-center gap-2 p-4">
    <h3 class="font-title text-fiveblue-500 text-5xl">{title}</h3>
    <Plus class="text-fivegreen-300 size-12" />
  </summary>

  <div class="flex flex-col items-center gap-4 p-4 text-center">
    <slot />
  </div>
</details>
